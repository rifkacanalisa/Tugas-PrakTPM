<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:cardBackgroundColor="#000d85"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:padding="5dp"
        >

        <ImageView
            android:id="@+id/group_list_iv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/blackpink"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/group_list_nama"
                android:text="blackpink"
                android:textColor="#ffffff"
                android:textSize="32dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textAllCaps="true"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debut : "
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/group_list_debut"
                    android:text="August 8th, 2016"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entertainment : "
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/group_list_ent"
                    android:text="YG "
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/group_list_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Detail"
                    android:textSize="9dp"
                    android:textAlignment="center"
                    android:background="#ff9100"
                    android:layout_marginHorizontal="5dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/group_list_share"
                    android:text="Share"
                    android:textSize="9dp"
                    android:textAlignment="center"
                    android:background="#00ff4c"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>